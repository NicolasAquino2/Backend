<h2>USER PROFILE</h2>
<section class="userProfileData">
    <p>Welcome <span class="bold">{{user.name}}</span>!</p>
    {{#if user.lastname}} <p><span class="bold">Lastname: </span>{{user.lastname}}</p>{{/if}}
    <p><span class="bold">Age: </span>{{user.age}}</p>
    {{#if user.email}} <p><span class="bold">Email: </span>{{user.email}}</p> {{/if}}
    <p><span class="bold">Role: </span>{{user.role}}</p>
    <a href="/logout" class="logout">Logout</a> 

    <form id="deleteForm" action="/api/sessions/{{user._id}}" method="DELETE">
        <button type="submit" class="deleteButton" data-userid="{{user._id}}">Delete account</button>
    </form>
</section>

<script src="/js/profile.js"></script>